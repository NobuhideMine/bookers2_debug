<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
     <%= link_to '新しい順', books_path(latest: "true") %>
    |<%= link_to '評価の高い順', books_path(star_count: "true") %>
    <% books.each do |book| %>
   
      <tr>
        <td>
          <%= link_to (book.user) do %>
              <%= image_tag book.user.get_profile_image, size:'50x50' %>
          <% end %>
        </td>
        <td><%= link_to book.title,book, class: "book_#{book.id}" %></td>
        <td><%= book.body %></td>
        
        <!--タグリスト-->
          <!--<@tag_list.each do |list|%>-->
          <td><i class="fa-sharp fa-solid fa-tag"></i></td>
          <td><%=link_to tag_list,search_tag_path(book_tag_id: book.id) %></td>
          <td><%="(#{tag_list.post_books.count})" %></td>
          <!--< end %>-->
        
        <!--いいね機能ajax-partial -->
        <td class = <%= "favorite-" + book.id.to_s %> >
          <%= render "favorites/btn", book: book %>
        </td>
        <!--コメントカウンター-->
        <td><%= render "book_comments/counter", book: book %></td>
        <!--5段階評価-->
        <td><%= render "books/static_rate", book: book %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>